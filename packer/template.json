{
    "builders":
    [
      {
        "type": "qemu",
        "iso_url": "http://mirror.vtti.vt.edu/centos/7.6.1810/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso",
        "iso_checksum": "38d5d51d9d100fd73df031ffd6bd8b1297ce24660dc8c13a3b8b4534a4bd291c",
        "iso_checksum_type": "sha256",
        "output_directory": "disk",
        "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
        "disk_size": 5120,
        "format": "raw",
        "headless": true,
        "accelerator": "kvm",
        "http_directory": "/root/config",
        "ssh_username": "root",
        "ssh_password": "password",
        "ssh_timeout": "25m",
        "vm_name": "baked",
        "cpus":4,
        "memory":8192,
        "net_device": "virtio-net",
        "disk_interface": "virtio",
        "boot_wait": "30s",
        "boot_command": [
          "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos7.6-ks.cfg<enter><wait>"
        ]
      }
    ],
    "provisioners": [
      {
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
        "script": "/root/bake-azure.sh",
        "type": "shell",
        "expect_disconnect": true
      },
      {
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
        "script": "/root/deprovision.sh",
        "type": "shell",
        "pause_before": "10s"
      }
    ]
  }